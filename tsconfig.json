{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
            "apiSingelton": ["apiSingelton.ts"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
		},
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"downlevelIteration": true,
		"declaration": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": [
		"react-env.d.ts",
		"**/*.ts",
		"**/*.tsx", "server.js",
	],
	"exclude": [
	  	"node_modules",
	]
}
